<footer>
  <div class="container">
    <div class="row">
      {% if informations %}
      <div class="col-sm-3">
        <h5>{{ text_information }}</h5>
        <ul class="list-unstyled">
         {% for information in informations %}
          <li><a href="{{ information.href }}">{{ information.title }}</a></li>
          {% endfor %}       
          <!-- inicio facebook -->
          {% if facebook %}
          <li>    
            <a href="{{ facebook }}">
                <i class="fa fa-facebook-official"></i>
                <span>Facebook</span>
            </a>
          </li>
          {% else %}
          {% endif %}
          <!-- fim facebook -->
          <!-- inicio instagram -->
          {% if instagram  %}
          <li>    
            <a href="{{ instagram  }}">
                <i class="fa fa-instagram"></i>
                <span>Instagram </span>
            </a>
          </li>
          {% else %}
          {% endif %}
          <!-- fim instagram  -->
          <!-- inicio youtube -->
          {% if youtube %}
          <li>    
            <a href="{{ youtube }}">
                <i class="fa fa-youtube-play"></i>
                <span>Youtube</span>
            </a>
          </li>
          {% else %}
          {% endif %}
            <!-- fim youtube -->
          {% endif %}
        </ul>
      </div>
      <div class="col-sm-3">
        <h5>{{ text_service }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ contact }}">{{ text_contact }}</a></li>
          <li><a href="{{ return }}">{{ text_return }}</a></li>
          <li><a href="{{ sitemap }}">{{ text_sitemap }}</a></li>
        </ul>
      </div>
      <div class="col-sm-3">
        <h5>{{ text_extra }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>
          <li><a href="{{ voucher }}">{{ text_voucher }}</a></li>
          <li><a href="{{ affiliate }}">{{ text_affiliate }}</a></li>
          <li><a href="{{ special }}">{{ text_special }}</a></li>
        </ul>
      </div>
      <div class="col-sm-3">
        <h5>{{ text_account }}</h5>
        <ul class="list-unstyled">
          <li><a href="{{ account }}">{{ text_account }}</a></li>
          <li><a href="{{ order }}">{{ text_order }}</a></li>
          <li><a href="{{ wishlist }}">{{ text_wishlist }}</a></li>
          <li><a href="{{ newsletter }}">{{ text_newsletter }}</a></li>
        </ul>
      </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-4"><p>{{ powered }}</p></div>
        <div class="col-md-4 text-center">
            <div id="topcontrol" title="Role para o topo" style="position: fixed; bottom: 5px; right: 600px; opacity: 1; cursor: pointer;">
                <img src="image/up.png" style="width:51px; height:42px">
            </div>  
        </div>
        <div class="col-md-4 text-right">Desenvolvido por <a href="https://www.bitstore.com.br">
            <img src="image/logo-bitstore-footer.svg" class="img-fluid" alt="Responsive image"></a>
            <!-- inicio Whatsapp -->
            {% if whatsapp %}
                <link rel="stylesheet" href="{{ whatsapp }}">
                <a href="{{ whatsapp }}" style="position:fixed;width:40px;height:40px;bottom:10px;left:10px;background-color:#25d366;color:#FFF;text-align:center;font-size:30px;box-shadow: 1px 1px 2px #888; z-index:1000;" target="_blank">
                <i style="font-size: 90%; padding: 15%;" class="fa fa-whatsapp"></i>
                </a>           
            {% else %}
            {% endif %}
            <!-- fim Whatsapp-->
	</div>
    </div>  
  </div>
</footer>
        
<script type="text/javascript" src="catalog/view/javascript/back-to-top.js"></script>  

{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
